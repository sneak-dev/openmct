{
    "name": "Sine Wave Generator",
    "description": "Example of a component that produces dataa.",
    "extensions": {
        "components": [
            {
                "implementation": "SinewaveTelemetryProvider.js",
                "type": "provider",
                "provides": "telemetryService",
                "depends": [ "$q", "$timeout" ]
            },
            {
                "implementation": "SinewaveDateProvider.js",
                "type": "provider",
                "provides": "dateService"
            }
        ],
        "capabilities": [
            {
                "key": "limit",
                "implementation": "SinewaveLimitCapability.js"
            }
        ],
        "types": [
            {
                "key": "generator",
                "name": "Sine Wave Generator",
                "glyph": "T",
                "description": "A sine wave generator",
                "features": "creation",
                "model": {
                    "telemetry": {
                        "period": 10
                    }
                },
                "telemetry": {
                    "source": "generator",
                    "domains": [
                        {
                            "key": "time",
                            "name": "Time"
                        },
                        {
                            "key": "yesterday",
                            "name": "Yesterday"
                        },
                        {
                            "key": "index",
                            "name": "Index",
                            "system": "generator.index"
                        }
                    ],
                    "ranges": [
                        {
                            "key": "sin",
                            "name": "Sine"
                        },
                        {
                            "key": "cos",
                            "name": "Cosine"
                        }
                    ]
                },
                "properties": [
                    {
                        "name": "Period",
                        "control": "textfield",
                        "cssclass": "l-small l-numeric",
                        "key": "period",
                        "required": true,
                        "property": [ "telemetry", "period" ],
                        "pattern": "^\\d*(\\.\\d*)?$"
                    }
                ]
            }
        ],
        "constants": [
            {
                "key": "TIME_CONDUCTOR_DOMAINS",
                "value": [
                    { "key": "time", "name": "Time" },
                    { "key": "yesterday", "name": "Yesterday" },
                    { "key": "index", "name": "Index", "system": "generator.index" }
                ],
                "priority": -1,
                "comment": "Placeholder; to be replaced by inspection of available domains."
            }
        ]
    }
}
