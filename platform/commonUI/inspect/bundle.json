{
    "extensions": {
        "templates": [
            {
                "key": "info-table",
                "templateUrl": "info-table.html"
            },
            {
                "key": "info-bubble",
                "templateUrl": "info-bubble.html"
            }
        ],
        "containers": [
            {
                "key": "bubble",
                "templateUrl": "bubble.html",
                "attributes": [ "bubbleTitle", "bubbleLayout" ],
                "alias": "bubble"
            }
        ],
        "gestures": [
            {
                "key": "info",
                "implementation": "gestures/InfoGesture.js",
                "depends": [
                    "$timeout",
                    "agentService",
                    "infoService",
                    "INFO_HOVER_DELAY"
                ]
            },
            {
                "key": "infobutton",
                "implementation": "gestures/InfoButtonGesture.js",
                "depends": [
                    "$document",
                    "agentService",
                    "infoService"
                ]
            }
        ],
        "services": [
            {
                "key": "infoService",
                "implementation": "services/InfoService.js",
                "depends": [
                    "$compile",
                    "$document",
                    "$window",
                    "$rootScope",
                    "agentService"
                ]
            }
        ],  
        "constants": [
            {
                "key": "INFO_HOVER_DELAY",
                "value": 2000
            }
        ],
        "representations": [
            {
                "key": "info-button",
                "templateUrl": "templates/info-button.html",
                "gestures": [ "infobutton" ]
            }
        ]
    }
}